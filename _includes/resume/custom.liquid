<ul class="card-text font-weight-light list-group list-group-flush">
  {% assign work = data[1] %}
  {% for content in work %}
    <li class="list-group-item">
      <div class="row">
        <div class="col-xs-10 cl-sm-10 mt-2 mt-md-0">
          <h6 class="title font-weight-bold ml-1 ml-md-4">{{ content.position }}</h6>
          <h6 class="ml-1 ml-md-4" style="font-size: 0.95rem">{{ content.name }}</h6>
          <h6 class="ml-1 ml-md-4" style="font-size: 0.95rem">{{ content.summary | markdownify }}</h6>
          <ul class="items">
            {% for item in content.highlights %}
              <li>
                <span class="item">{{ item }}</span>
              </li>
            {% endfor %}
          </ul>
        </div>
      </div>
    </li>
  {% endfor %}
</ul>
